.avatar {
    position:absolute;
    height:100%; /* = 100% - 2*5% padding */
    width:100%; /* = 100% - 2*5% padding */
    border-radius: 50%;
}

.avatar-container {
    float:left;
    position: relative;
    width: 30%;
    padding-bottom : 30%; /* = width for a 1:1 aspect ratio */
    margin:1.66%;
    overflow:hidden;
}

.icon {
    width: 40%;
    height: 40%;
    position: absolute;
}

.top {
    top: 0px;;
}

.bottom {
    bottom: 0px;
}

.left {
    left: 0px;;
}

.right {
    right: 0px;
    float: right;
}