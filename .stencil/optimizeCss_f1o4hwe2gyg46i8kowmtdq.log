.list-item {
    max-height: 100px;
    width: 100%;
    display: flex;
    flex-grow: 1;
    max-height: 100px;
    width: 100%;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-pack: start;
    justify-content: start;
    -ms-flex-align: center;
    align-items: center;
}

.item-center {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: row;
    flex-direction: row;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    -ms-flex-align: stretch;
    align-items: stretch;
    -ms-flex-pack: start;
    justify-content: start;
    -ms-flex-align: baseline;
    align-items: baseline;
}

.item-avatar {
    max-height: 100px;
    max-width: 100px;
    height: 100%;
    width: 100%;
}

.item-title {
    font-family: 'Verdana';
    font-style: normal;
    top: 50%;
    margin: 5px;

}


.item-text {
    color: darkgray;
    font-family: 'Verdana';
    font-style: normal;
    top: 50%;
    padding-left: 20px;
    margin: 5px;

}