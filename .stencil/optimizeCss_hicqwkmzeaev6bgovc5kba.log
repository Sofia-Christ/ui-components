.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}

.avatar-container {
    width: 100%;
    display: inline-block;
    background-color: blue;
    position: relative;
}

.status-item {
    max-width: 40%;
    max-height: 40%;
    position: absolute;
    border-radius: 20%;
}

.status-dot {
    max-width: 40%;
    max-height: 40%;
    position: absolute;
    border-radius: 50%;
}