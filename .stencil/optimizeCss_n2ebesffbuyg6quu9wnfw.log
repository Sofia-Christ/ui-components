.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}

.avatar-container {
    width: 100%;
    display: inline-block;
    background-color: blue;
    position: relative;
}

.avatar-container:after {
    content: "";
    display: block;
    padding-bottom: 100%;
}

.icon {
    width: 40%;
    height: 20%;
    position: absolute;
    border-radius: 50%;
}

.top {
    top: 0px;;

}

.bottom {
    bottom: 50%;
}

.left {
    left: 0px;;

}

.right {
    right: 0px;
    float: right;
}