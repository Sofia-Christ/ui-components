.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.flex-status-box {
    top: 0px;
    display: -ms-flexbox;
    display: flex;
    position: absolute;
    width: 100%;
    height: 100%;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    -ms-flex-pack: justify;
    justify-content: space-between;
}

.flex-status-item {
    max-width: 50%;
    max-height: 50%;
}

.container {
    width: 100%;
    display: block;
    padding-bottom: 100%;
}