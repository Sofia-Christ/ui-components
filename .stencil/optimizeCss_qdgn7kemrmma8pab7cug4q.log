.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}

.avatar-container {
    width: 100%;
    background-color: blue;
}

.avatar-container:after {
    content: "";
    display: block;
    padding-bottom: 100%;
    background-color: beige;
}

.status-item {
    max-width: 50%;
    max-height: 50%;
    position: absolute;
}