.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}

.avatar-container {
    width: 100%;
    display: inline-block;
    background-color: blue;
    position: relative;
}

.icon {
    width: 40%;
   height: 40%;
    position: absolute;
    border-radius: 50%;
}

.top {
    top: 0px;;

}

.bottom {
    float: bottom;;

}

.left {
    left: 0px;;

}

.right {
    right: 0px;
    float: right;
}