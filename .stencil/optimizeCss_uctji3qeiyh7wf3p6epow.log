.mention {
    border-radius: 3px;
    text-decoration: none;
    position: relative;
    font-family: sans-serif;
    font-weight: 100;
    padding: 3px;

    display: -ms-flexbox;

    display: flex;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    -ms-flex-direction: row;
    flex-direction: row;
    width: -webkit-min-content;
    width: -moz-min-content;
    width: min-content;
    max-width: 100%;
    -ms-flex-align: center;
    align-items: center;
}

.icon {
    max-width: 20px;
    max-height: 20px;
    display: inline-block;
    padding: 0px 5px 0px 5px;
}

.icon:empty {
    padding: 0px;
}


.text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-negative: 1;
    flex-shrink: 1;
    padding: 0px 5px 0px 5px;

}