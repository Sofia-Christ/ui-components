.list-item {
    max-height: 100px;
    width: 100%;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-positive: 1;
    flex-grow: 1;
}

.item-center {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-direction: row;
    flex-direction: row;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
}

.item-avatar {
    max-height: 100px;
    max-width: 100px;
    height: 100%;
    width: 100%;
}

.item-title {
    font-family: 'Verdana';
    font-size: 60%;
    min-font-size: 5px;
}

.item-text {
    color: darkgray;
}